<Window x:Class="SagaIngenieria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:scott="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="SAGA Ingeniería - Banco de Pruebas v2.0" Height="768" Width="1366"
        Background="#121212" WindowState="Maximized">

    <Window.Resources>
        <!-- Estilo para los botones del menú superior (Modernos y planos) -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para los selectores de gráfico (Radio Buttons como Tabs) -->
        <Style x:Key="GraphToggleStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bdr" Background="#2D2D30" BorderBrush="#444" BorderThickness="1" Margin="2" CornerRadius="3" Padding="10,6">
                            <TextBlock Text="{TemplateBinding Content}" Foreground="Gray" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#007ACC"/>
                                <!-- Azul Visual Studio -->
                                <Setter TargetName="bdr" Property="BorderBrush" Value="#009EFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Barra Superior -->
            <RowDefinition Height="*"/>
            <!-- Área de Trabajo -->
        </Grid.RowDefinitions>

        <!-- 1. BARRA SUPERIOR (TOOLBAR) -->
        <Border Grid.Row="0" Background="#1F1F1F" BorderBrush="#333" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Logo -->
                    <ColumnDefinition Width="*"/>
                    <!-- Botones Gestión -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Info -->
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <TextBlock Text="SAGA" Foreground="White" FontWeight="Black" FontSize="20" Style="{x:Null}"/>
                    <TextBlock Text="INGENIERÍA" Foreground="#00E5FF" FontWeight="Light" FontSize="20" Margin="5,0,0,0" Style="{x:Null}"/>
                </StackPanel>

                <!-- Botones de Gestión (Nuevo, Cargar, Calibrar) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Button x:Name="btnNuevo" Click="btnNuevo_Click" Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📄" Margin="0,0,8,0"/>
                            <TextBlock Text="NUEVO ENSAYO"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnCargar" Click="btnCargar_Click" Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📂" Margin="0,0,8,0"/>
                            <TextBlock Text="CARGAR HISTORIAL"/>
                        </StackPanel>
                    </Button>
                    <Rectangle Width="1" Height="20" Fill="#444" Margin="10,0"/>
                    <Button x:Name="btnCalibrarCero" Click="btnCalibrarCero_Click" Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚖" Margin="0,0,8,0"/>
                            <TextBlock Text="CALIBRAR CERO (Tare)"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 2. ÁREA PRINCIPAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <!-- Panel Izquierdo -->
                <ColumnDefinition Width="*"/>
                <!-- Gráfico Central -->
                <ColumnDefinition Width="220"/>
                <!-- Panel Derecho -->
            </Grid.ColumnDefinitions>

            <!-- PANEL IZQUIERDO: CONTROLES -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#333" BorderThickness="0,0,1,0">
                <StackPanel Margin="15">
                    <TextBlock Text="CONTROL DE MÁQUINA" Foreground="#888" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- Botón MOTOR -->
                    <Button x:Name="btnMotor" Click="btnMotor_Click" Height="60" Background="#333" Margin="0,0,0,10" BorderThickness="1">
                        <Border Background="#2D2D30" CornerRadius="5" BorderBrush="Yellow" BorderThickness="2" Height="40" Width="138" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock Text="⚡" FontSize="24" Foreground="Yellow" Margin="0,0,10,0" Width="25" TextAlignment="Center"/>
                                <TextBlock Text="ENCENDER" x:Name="txtBtnMotor" Foreground="White" FontWeight="Bold" FontSize="16" Width="87" TextAlignment="Center" Height="20"/>
                                <!-- Le quitamos el x:Name al texto porque cambiaremos el contenido del botón entero -->
                            </StackPanel>
                        </Border>
                    </Button>

                    <!-- Separador -->
                    <Rectangle Height="1" Fill="#444" Margin="0,10,0,10"/>

                    <!-- Botón GRABAR -->
                    <Button x:Name="btnGrabar" Click="btnGrabar_Click" IsEnabled="False" Height="50" Margin="0,0,0,10" Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                        <Border Background="#2D2D30" CornerRadius="5" BorderBrush="#D32F2F" BorderThickness="2" Height="40">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="52" Width="137">
                                <TextBlock Text="🔴" FontSize="16" Width="34" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="GRABAR REC" Foreground="#FFE02222" FontWeight="Bold" Width="79" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Button>

                    <!-- Botón GUARDAR -->
                    <Button x:Name="btnGuardar" Click="btnGuardar_Click" IsEnabled="False" Height="50" BorderThickness="0" VerticalAlignment="Center">
                        <Button.Background>
                            <ImageBrush/>
                        </Button.Background>
                        <Border Background="#2D2D30" CornerRadius="5" BorderBrush="#2196F3" BorderThickness="2" Height="40" Width="139">
                            <StackPanel Orientation="Horizontal" Height="23" Width="122" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="💾" FontSize="16" Width="32" RenderTransformOrigin="0.609,0.503" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text="GUARDAR" Foreground="#448AFF" FontWeight="Bold" Width="75" RenderTransformOrigin="0.753,0.442" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Button>

                    <TextBlock x:Name="txtEstado" Foreground="Gray" Margin="0,20,0,0" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"><Run Text="Listo"/><Run Language="es-ar" Text=" para empezar"/></TextBlock>
                </StackPanel>
            </Border>

            <!-- ZONA CENTRAL: GRÁFICOS -->
            <Grid Grid.Column="1" Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Barra de Selección de Gráficos -->
                    <RowDefinition Height="*"/>
                    <!-- Plot -->
                </Grid.RowDefinitions>

                <!-- Selector de Vistas (Tipo Pestañas) -->
                <Border Background="#1E1E1E" Padding="5">
                    <WrapPanel HorizontalAlignment="Center">
                        <!-- Estos RadioButtons controlan qué gráfico se ve -->
                        <RadioButton Content="Fuerza vs Desp" GroupName="Graficos" Style="{StaticResource GraphToggleStyle}" Checked="CambiarGrafico_Checked" Tag="FvsD" IsChecked="True"/>
                        <RadioButton Content="Fuerza vs Vel" GroupName="Graficos" Style="{StaticResource GraphToggleStyle}" Checked="CambiarGrafico_Checked" Tag="FvsV"/>
                        <RadioButton Content="Fz + Desp vs T" GroupName="Graficos" Style="{StaticResource GraphToggleStyle}" Checked="CambiarGrafico_Checked" Tag="FDvsT"/>
                        <RadioButton Content="Fz + Vel vs T" GroupName="Graficos" Style="{StaticResource GraphToggleStyle}" Checked="CambiarGrafico_Checked" Tag="FVvsT"/>
                        <RadioButton Content="Fz Pico vs Vel" GroupName="Graficos" Style="{StaticResource GraphToggleStyle}" Checked="CambiarGrafico_Checked" Tag="PicoVsV"/>
                    </WrapPanel>
                </Border>

                <!-- El Gráfico ScottPlot -->
                <scott:WpfPlot x:Name="GraficoPrincipal" Grid.Row="1"/>
            </Grid>

            <!-- PANEL DERECHO: TELEMETRÍA -->
            <Border Grid.Column="2" Background="#1E1E1E" BorderBrush="#333" BorderThickness="1,0,0,0">
                <StackPanel Margin="15">
                    <TextBlock Text="TELEMETRÍA" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <!-- Tarjeta FUERZA -->
                    <Border Background="#252526" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="FUERZA (kg)" Foreground="#888" FontSize="11"/>
                            <TextBlock x:Name="txtFuerza" Text="0.0" Foreground="#FF4081" FontSize="28" FontWeight="Bold" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>

                    <!-- Tarjeta POSICIÓN -->
                    <Border Background="#252526" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="POSICIÓN (mm)" Foreground="#888" FontSize="11"/>
                            <TextBlock x:Name="txtPosicion" Text="0.0" Foreground="#00E5FF" FontSize="28" FontWeight="Bold" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>

                    <!-- Tarjeta VELOCIDAD (Nuevo) -->
                    <Border Background="#252526" CornerRadius="5" Padding="10" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="VELOCIDAD (mm/s)" Foreground="#888" FontSize="11"/>
                            <TextBlock x:Name="txtVelocidad" Text="0.0" Foreground="#B2FF59" FontSize="28" FontWeight="Bold" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="VALORES PICO" Foreground="#666" FontSize="10" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="MAX COMP" Foreground="#FF5252" FontSize="10"/>
                            <TextBlock x:Name="txtMaxComp" Text="0" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="MAX EXPA" Foreground="#448AFF" FontSize="10"/>
                            <TextBlock x:Name="txtMaxExpa" Text="0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>