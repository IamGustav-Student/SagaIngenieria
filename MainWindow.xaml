<Window x:Class="SagaIngenieria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:scott="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="SAGA Ingeniería" Height="720" Width="1280"
        Background="#121212">

    <!-- GRID PRINCIPAL -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Encabezado -->
            <RowDefinition Height="*"/>
            <!-- Cuerpo -->
        </Grid.RowDefinitions>

        <!-- ZONA 1: ENCABEZADO -->
        <Border Grid.Row="0" Background="#1E1E1E">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="SAGA V1.0 - " Foreground="Gray" VerticalAlignment="Center" FontSize="20"/>
                <TextBlock Text="SISTEMA EN VIVO" Foreground="#00E5FF" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- CONTENEDOR CENTRAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <!-- Controles -->
                <ColumnDefinition Width="*"/>
                <!-- Gráfico -->
                <ColumnDefinition Width="200"/>
                <!-- Datos -->
            </Grid.ColumnDefinitions>

            <!-- ZONA 2: PANEL IZQUIERDO -->
            <Border Grid.Column="0" Background="#252526" Margin="5">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >

                    <!-- Título -->
                    <TextBlock Text="CONTROL DE MANDO" Foreground="Gray" Margin="0,0,0,20" HorizontalAlignment="Center" FontWeight="Bold"/>

                    <!-- 1. BOTÓN MOTOR (Interruptor General) -->
                    <Button x:Name="btnMotor" Click="btnMotor_Click" 
                            Width="200" Height="50" Background="#444" Margin="0,0,0,15" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚡" FontSize="20" Margin="0,0,10,0" Foreground="Yellow"/>
                            <TextBlock x:Name="txtMotor" Text="ENCENDER MOTOR" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Separador -->
                    <Rectangle Height="1" Fill="#333" Width="200" Margin="0,10,0,20"/>

                    <!-- 2. BOTÓN GRABAR (Inicio de Captura) -->
                    <!-- IsEnabled="False" porque no puedes grabar si el motor está apagado -->
                    <Button x:Name="btnGrabar" Click="btnGrabar_Click" IsEnabled="False"
                            Width="200" Height="50" Background="#2E7D32" Margin="0,0,0,15" BorderThickness="0" Opacity="0.5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔴" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="GRABAR ENSAYO" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- 3. BOTÓN GUARDAR (Fin de Captura) -->
                    <Button x:Name="btnGuardar" Click="btnGuardar_Click" IsEnabled="False"
                            Width="200" Height="50" Background="#444" BorderThickness="0" Opacity="0.5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💾" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Text="FINALIZAR Y GUARDAR" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Estado -->
                    <TextBlock x:Name="txtEstado" Text="SISTEMA EN ESPERA" Foreground="Gray" FontSize="12" HorizontalAlignment="Center" Margin="0,30,0,0"/>

                </StackPanel>
            </Border>

            <!-- ZONA 3: GRÁFICO CENTRAL (ScottPlot 5) -->
            <!-- Aquí usamos el prefijo 'scott' que definimos arriba -->
            <scott:WpfPlot x:Name="GraficoPrincipal" Grid.Column="1" Margin="5"/>

            <!-- ZONA 4: PANEL DERECHO (Datos) -->
            <Border Grid.Column="2" Background="#1E1E1E" Margin="5,5,5,5" CornerRadius="3">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Título -->
                        <RowDefinition Height="*"/>
                        <!-- Datos -->
                    </Grid.RowDefinitions>

                    <TextBlock Text="TELEMETRÍA" Foreground="White" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,15" Opacity="0.7"/>

                    <StackPanel Grid.Row="1">

                        <!-- TARJETA 1: FUERZA LIVE -->
                        <Border Background="#2D2D30" CornerRadius="4" Padding="8" Margin="0,0,0,10" BorderBrush="#333" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="FUERZA (kg)" Foreground="#AAAAAA" FontSize="10"/>
                                <TextBlock x:Name="txtFuerza" Text="0.0" Foreground="#FF4081" FontSize="26" FontWeight="Bold" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>

                        <!-- TARJETA 2: POSICIÓN LIVE -->
                        <Border Background="#2D2D30" CornerRadius="4" Padding="8" Margin="0,0,0,15" BorderBrush="#333" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="POSICIÓN (mm)" Foreground="#AAAAAA" FontSize="10"/>
                                <TextBlock x:Name="txtPosicion" Text="0.0" Foreground="#00E5FF" FontSize="26" FontWeight="Bold" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>

                        <!-- SEPARADOR -->
                        <Rectangle Height="1" Fill="#333" Margin="0,5,0,15"/>
                        <TextBlock Text="PICOS (PEAK HOLD)" Foreground="Gray" FontSize="10" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                        <!-- VALORES MAXIMOS -->
                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="MAX COMP" Foreground="#FF5252" FontSize="11" VerticalAlignment="Bottom" FontWeight="Bold"/>
                            <TextBlock x:Name="txtMaxComp" Text="0.0" Foreground="White" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid>
                            <TextBlock Text="MAX EXPA" Foreground="#448AFF" FontSize="11" VerticalAlignment="Bottom" FontWeight="Bold"/>
                            <TextBlock x:Name="txtMaxExpa" Text="0.0" Foreground="White" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                        </Grid>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>