<Window x:Class="SagaIngenieria.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cargando..." Height="350" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        Topmost="True">

    <!-- Borde Principal con Sombra y Esquinas Redondeadas -->
    <Border Background="#121212" CornerRadius="20" BorderBrush="#333" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="10" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <!-- CONTENIDO CENTRAL -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Logo (Texto Simulado) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="SAGA" Foreground="White" FontSize="48" FontWeight="Black" FontFamily="Segoe UI">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00E5FF" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="INGENIERÍA" Foreground="#00E5FF" FontSize="48" FontWeight="Light" Margin="10,0,0,0" FontFamily="Segoe UI"/>
                </StackPanel>

                <TextBlock Text="SISTEMA DE ADQUISICIÓN DE DATOS V2.0" Foreground="Gray" FontSize="14" HorizontalAlignment="Center" />
            </StackPanel>

            <!-- PIE: BARRA DE CARGA Y TEXTO -->
            <StackPanel Grid.Row="1" Margin="40,0,40,30">

                <Grid Margin="0,0,0,10">
                    <TextBlock Text="Iniciando motores..." Foreground="#666" FontSize="12" HorizontalAlignment="Left"/>
                    <TextBlock Text="© 2025 GSO Dev Team" Foreground="#444" FontSize="12" HorizontalAlignment="Right"/>
                </Grid>

                <!-- Barra de Carga Indeterminada (Animada) -->
                <ProgressBar IsIndeterminate="True" Height="4" Background="#222" BorderThickness="0" Foreground="#00E5FF"/>
            </StackPanel>
        </Grid>

    </Border>
</Window>
