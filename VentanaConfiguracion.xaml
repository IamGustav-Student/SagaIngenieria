<Window x:Class="SagaIngenieria.VentanaConfiguracion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración del Ensayo" Height="450" Width="700"
        Background="#1E1E1E" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#DDD"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#00E5FF"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- PANEL IZQUIERDO: SELECCIÓN -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="SELECCIÓN DE VELOCIDADES" FontWeight="Bold" Foreground="#00E5FF" Margin="0,0,0,10"/>

            <!-- OPCIÓN 1: SIMPLE -->
            <GroupBox Header="Velocidad Fija">
                <StackPanel>
                    <RadioButton x:Name="rbSimple" Content="Velocidad Simple (Manual)" IsChecked="True"/>
                    <StackPanel Orientation="Horizontal" Margin="25,5,0,0">
                        <TextBlock Text="Velocidad:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="txtHzSimple" Text="1.5" Width="60" TextAlignment="Center"/>
                        <TextBlock Text=" Hz" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- OPCIÓN 2: BARRIDO -->
            <GroupBox Header="Barrido Automático (Pasos)">
                <StackPanel>
                    <RadioButton x:Name="rbPasos" Content="Pasos Equispaciados"/>
                    <Grid Margin="25,5,0,0" IsEnabled="{Binding IsChecked, ElementName=rbPasos}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Velocidad Inicial:" Grid.Row="0" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtHzIni" Text="0.5" Grid.Row="0" Grid.Column="1" Margin="10,2"/>
                        <TextBlock Text=" Hz" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>

                        <TextBlock Text="Velocidad Final:" Grid.Row="1" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtHzFin" Text="3.0" Grid.Row="1" Grid.Column="1" Margin="10,2"/>
                        <TextBlock Text=" Hz" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>

                        <TextBlock Text="Paso (Salto):" Grid.Row="2" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtHzPaso" Text="0.5" Grid.Row="2" Grid.Column="1" Margin="10,2"/>
                        <TextBlock Text=" Hz" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- PANEL DERECHO: TABLA PREVIA -->
        <Border Grid.Column="1" Background="#252526" BorderBrush="#444" BorderThickness="1" Margin="10,0,0,0">
            <StackPanel>
                <TextBlock Text="TABLA GENERADA" Foreground="Gray" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                <ListBox x:Name="lstVelocidades" Background="Transparent" BorderThickness="0" Foreground="White" Height="280" Margin="5"/>
                <Button Content="Previsualizar" Click="btnCalcular_Click" Margin="10" Width="Auto"/>
            </StackPanel>
        </Border>

        <!-- BOTONERA INFERIOR -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="CANCELAR" Click="btnCancelar_Click" Background="#333" Margin="0,0,10,0"/>
            <Button Content="ACEPTAR" Click="btnAceptar_Click" Background="#00E676" Foreground="Black" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
